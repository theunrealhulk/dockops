# Use Node.js as the base image
FROM node:latest

# Set working directory
WORKDIR /app

# Install Angular CLI globally
RUN npm install -g @angular/cli

# Create a new Angular project
# --skip-git avoids initializing a git repo, --defaults uses default settings for minimal prompts
RUN ng new my-angular-app --skip-git --defaults

# Set working directory to the new Angular project
WORKDIR /app/my-angular-app

# Expose port 4200 for Angular dev server
EXPOSE 4200

# Start Angular development server with hot reload
CMD ["ng", "serve", "--host", "0.0.0.0", "--poll", "2000"]
